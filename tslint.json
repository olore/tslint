{
  "extends": "tslint:latest",
  "rules": {
    "interface-name": {
      "level": "off"
    },
    "max-classes-per-file": {
      "level": "off"
    },
    "max-line-length": {
      "level": "error",
      "options": 140
    },
    "member-ordering": {
      "level": "error",
      "options": [
        "public-before-private",
        "static-before-instance",
        "variables-before-functions"
      ]
    },
    "variable-name": {
      "level": "error",
      "options" : [
        "ban-keywords",
        "check-format",
        "allow-leading-underscore",
        "allow-pascal-case"
      ]
    }
  }
}
